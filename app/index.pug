html
  include shared/head
  body(ng-app='entertainmentAtlas')
    header.brand-publisher
      img.info-svg(src='images/info.svg')
      p.brand-publisher-text BRAND PUBLISHER:
      img.lyft-logo(src='images/Lyft_Logo.png')
    .about-button-parent
      button(data-toggle='modal' data-target='#aboutModal' class='about-button') About
      #aboutModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='aboutModalLabel')
        .vertical-alignment-helper
          .modal-dialog.vertical-align-center(role='document')
            .modal-content
              .modal-header
                h4(id='aboutModalLabel') The Definitive Guide Entertainment Venues in Chicago
                i.fa.fa-times-circle-o.fa-2x(data-dismiss='modal')
              .modal-body
                .brand-publisher-group
                  p.brand-publisher-text BRAND PUBLISHER:
                  img(src='images/Lyft_Logo.png')
